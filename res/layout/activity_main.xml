<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_main_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/main_navigation_bar_bg_color"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_main_navigation_main"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="1dp"
            android:background="@drawable/bg_btn_navigation_selector"
            android:text="@string/main_navigation_main" />
    </LinearLayout>

    <cn.yueying.waterfalllibrary.view.WaterFallScrollView
        android:id="@+id/staggeredGridView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>